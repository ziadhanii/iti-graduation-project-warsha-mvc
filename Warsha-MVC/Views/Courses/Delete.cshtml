@model Course

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-bg-danger rounded-pill p-2">Delete</h1>

    <h3 class="mb-4">Are you sure you want to delete this Course?</h3>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Course</h4>
        </div>
        <div class="card-body text-dark">
            <dl class="row">
                <dt class="col-sm-12 col-md-4 col-lg-3">
                    Title
                </dt>
                <dd class="col-sm-12 col-md-8 col-lg-9">
                    @Model.Title
                </dd>
                <dt class="col-sm-12 col-md-4 col-lg-3">
                    Description
                </dt>
                <dd class="col-sm-12 col-md-8 col-lg-9">
                    @Model.Description
                </dd>
                <dt class="col-sm-12 col-md-4 col-lg-3">
                    Start Date
                </dt>
                <dd class="col-sm-12 col-md-8 col-lg-9">
                    @Model.StartDate.ToShortDateString()
                </dd>
                <dt class="col-sm-12 col-md-4 col-lg-3">
                    End Date
                </dt>
                <dd class="col-sm-12 col-md-8 col-lg-9">
                    @Model.EndDate.ToShortDateString()
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this course?');">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </form>
        </div>
    </div>
</div>
