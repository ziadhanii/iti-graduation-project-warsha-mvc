@model Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-header text-danger">
                    <h5 class="card-title">@Model.Title</h5>
                </div>
                <div class="card-body text-dark">
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
                    <p class="card-text"><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary me-2">Back to List</a>

                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                        <a asp-controller="Enrollments" asp-action="Create" asp-route-courseId="@Model.Id" class="btn btn-primary me-2">Book</a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
