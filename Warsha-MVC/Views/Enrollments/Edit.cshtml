@model EditenrollmentFormViewModel

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Enrollment</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="form-group">
                    <label asp-for="SelectedCourseId" class="control-label"></label>
                    <select asp-for="SelectedCourseId" asp-items="Model.Courses" class="form-control mt-2">
                        <option value="">Select a Course</option>
                    </select>
                    <span asp-validation-for="SelectedCourseId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
